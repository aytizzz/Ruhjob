@{
	ViewData["Title"] = "Add";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Single News -->
<section class="news-single section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-12">
				<div class="row">
					<div class="col-12">
						<div class="comments-form">
							<h2>Add Vacancy</h2>
							<!-- Contact Form -->
							<form class="form" method="post">
								<div class="row">
									<div class="col-lg-4 col-md-4 col-12">
										<div class="form-group">
											<input type="text" name="Title" placeholder="Title" required="required">
										</div>
									</div>
									<div class="col-lg-4 col-md-4 col-12">
										<div class="form-group">
											<input type="text" name="Price" placeholder="Price" required="required">
										</div>
									</div>
									<div class="col-lg-4 col-md-4 col-12">
										<div class="form-group">
											<select type="text" name="CategoryID">
												@foreach (var item in ViewBag.list)
												{
													<option value="@item.ID">@item.Name</option>
												}
											</select>
										</div>
									</div>
									<div class="col-12">
										<div class="form-group message">
											<textarea name="Text" rows="7" placeholder="Type Your Text Here"></textarea>
										</div>
									</div>
									<div class="col-12">
										<div class="form-group button">
											<button type="submit" class="btn primary"><i class="fa fa-send"></i>Share</button>
										</div>
									</div>
								</div>
							</form>
							<!--/ End Contact Form -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!--/ End Single News -->
