@model List<Ruhjobsss.DataAccess.Entity.Job>
	@{
		ViewData["Title"] = "Home Page";
	}

	<!-- Start service -->
	<section class="services section">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="section-title">
						<h2>Categories</h2>
					</div>
				</div>
			</div>
			<div class="row">
				@foreach (var item in ViewBag.c)
				{
					<div class="col-lg-4 col-md-6 col-12">
						<!-- Start Single Service -->
						<div class="single-service">
							<i class="@item.Icon"></i>
							<h4><a href="/Home/CategoryJob/@item.ID/">@item.Name</a></h4>
							<p>129 job</p>
						</div>
						<!-- End Single Service -->
					</div>
				}
			</div>
		</div>
	</section>
	<!--/ End service -->
	<!-- Start Blog Area -->
	<section class="blog section" id="blog">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="section-title">
						<h2>Vacancies</h2>
					</div>
				</div>
			</div>
			<div class="row">
				@foreach (var item in Model)
				{
					<div class="col-lg-12 col-md-12 col-12">
						<!-- Single Blog -->
						<div class="single-news">
							<div class="news-body">
								<div class="news-content">
									<div class="date">@item.CreateDate.ToString("dd-MMM")</div>
								<h2><a href="/Home/Detail/@item.ID/">@item.Title</a></h2>
									<p class="text">
										@item.Text
									</p>
									<p>
										<h2 style="color: green;">@item.Price azn</h2>
									</p>
								</div>
							</div>
						</div>
						<!-- End Single Blog -->
					</div>
				}
			</div>
		</div>
	</section>
	<!-- End Blog Area -->
