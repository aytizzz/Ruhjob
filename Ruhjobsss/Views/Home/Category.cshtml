@model List<Ruhjobsss.DataAccess.Entity.Category>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start service -->
<section class="services section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>Categories</h2>
				</div>
			</div>
		</div>
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-6 col-12">
					<!-- Start Single Service -->
					<div class="single-service">
						<i class="@item.Icon"></i>
						<h4><a href="/Home/CategoryJob/@item.ID/">@item.Name</a></h4>
						<p>129 job</p>
					</div>
					<!-- End Single Service -->
				</div>
			}
		</div>
	</div>
</section>
<!--/ End service -->
