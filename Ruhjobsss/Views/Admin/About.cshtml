@model List<Ruhjobsss.DataAccess.Entity.About>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12 col-md-6">
                <h5>About table</h5>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Text</th>   
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@item.Text</td>
                                <td><a  href="/Admin/AboutDelete/@item.ID/"class=" btn btn-danger"></a>Delete</td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>
