@model List<Ruhjobsss.DataAccess.Entity.Job>
@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12 col-md-6">
                <h5>Jobs table</h5>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Text</th>
                            <th>Create</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@item.Text</td>
                                <td>@item.CreateDate</td>
                                <td>@item.Price</td>
                                <td>@item.Category.Name</td>
                                <td><a href="/Admin/JobUpdate/@item.ID/" class="btn btn-success">Update</a></td>
                                <td><a href="/Admin/JobDelete/@item.ID/" class="btn btn-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>

