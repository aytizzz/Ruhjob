@model List<Ruhjobsss.DataAccess.Entity.Category>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12 col-md-6">
                <h5>Category table</h5>
                <td><a href="/Admin/CategoryAdd/" class=" btn btn-primary"></a>Add </td>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Icon</th>
                            <th>Name</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Icon</td>
                                <td>@item.Name</td>
                                <td><a href="/Admin/CategoryDelete/@item.ID/" class=" btn btn-danger"></a>Delete</td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>
